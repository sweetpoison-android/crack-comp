<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clickable_button">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_dialog_cardview"
        android:background="@drawable/clickable_button"
        android:layout_gravity="center"
       android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="10dp"
                android:id="@+id/customdialog_textview"
                android:textSize="20sp"
                android:gravity="center" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:id="@+id/custom_dialog_circleimageview"
                android:src="@mipmap/adventure"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/customdialog_textview"
                android:layout_marginTop="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_dialog_canclebutton"
                android:text="cancel"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/custom_dialog_circleimageview"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_dialog_okbutton"
                android:text="ok"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/custom_dialog_circleimageview"
               android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>