<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/accountdetail_appbarlayout"
        android:theme="@style/Theme.AppCompat.Light">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/accountdetail_collapsingtoolbar"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:contentScrim="@color/colorPrimary"
            app:title="Hi"
            app:expandedTitleGravity="center_horizontal|bottom"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/accountdetail_headerimage"
                   android:layout_centerHorizontal="true"
                    android:src="@mipmap/adventure"
                    android:layout_marginTop="20dp"
                    android:paddingVertical="10dp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/accountdetail_camera"
                    android:src="@drawable/ic_photo_camera_black_24dp"
                    android:layout_toRightOf="@id/accountdetail_headerimage"
                    android:layout_marginTop="100dp"/>

            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/accountdetail_toolbar"
                app:layout_collapseMode="pin"
                app:titleTextColor="#ffffff"
                app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Light">
                <ProgressBar
                    android:id="@+id/accountdetail_progressbar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:indeterminateTint="#fff"
                    android:visibility="gone" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accountdetail_name1"
                android:text="NAME : \t"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:paddingVertical="10dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accountdetail_name"
                android:layout_toRightOf="@id/accountdetail_name1"
                android:text=""
                android:textSize="25dp"
                android:paddingVertical="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accountdetail_email1"
                android:layout_below="@id/accountdetail_name"
                android:text="EMAIL : \t"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:paddingVertical="10dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accountdetail_email"
                android:layout_below="@id/accountdetail_name"
                android:layout_toRightOf="@id/accountdetail_email1"
                android:text=""
                android:textSize="25dp"
                android:paddingVertical="10dp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accountdetail_mobile1"
                android:layout_below="@id/accountdetail_email"
                android:text="MOBILE NO : \t"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:paddingVertical="10dp"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:drawablePadding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accountdetail_mobile"
                android:layout_below="@id/accountdetail_email"
                android:layout_toRightOf="@id/accountdetail_mobile1"
                android:text=""
                android:textSize="25dp"
                android:paddingVertical="10dp"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:drawablePadding="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accountdetail_signuptime"
                android:layout_below="@id/accountdetail_mobile"
                android:text="signup"
                android:textSize="25dp"
                android:paddingVertical="10dp"
                android:textColor="@color/colorPrimary"/>
        </RelativeLayout>




    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>