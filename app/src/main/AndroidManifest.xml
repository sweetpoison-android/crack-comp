<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="atlair.edu.crackcomp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"
        tools:ignore="SelectedPhotoAccess" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/crackcomp_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/crackcomp_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="true"
        >

        <activity android:name=".Update_ProfileImage"
            android:exported="false"/>
        <activity android:name=".Account_Detail"
            android:exported="false"/>
        <activity android:name=".Result"
            android:exported="false"/>
        <activity android:name=".GiveTest_CompExam"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity"/>

        <activity
            android:name=".ShowQuestionComp"
            android:exported="false"/>
        <activity
            android:name=".Upload_question"
            android:exported="false"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".Update_Question"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity android:name=".UserActivity"
            android:exported="false"/>
        <activity android:name=".AllUser_Activity"
            android:exported="false"/>
        <activity android:name=".ImageShowInFullScreen"
            android:exported="false"/>
        <activity android:name=".Update_MobileNumber"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity"/>
        <activity android:name=".Signup_MobileNumber_and_Image"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name=".ForgetPassword"
            android:exported="false"
            android:label="Forget Password" />
        <activity
            android:name=".Login"
            android:exported="false"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".Signup"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <service android:name=".Token_generator"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>