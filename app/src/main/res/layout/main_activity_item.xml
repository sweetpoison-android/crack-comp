<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/main_activity_item_relativelayout1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:id="@+id/main_activity_item_imageview"
                android:src="@mipmap/adventure"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_activity_item_name"
                android:layout_toRightOf="@id/main_activity_item_imageview"
                android:text="user name"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_activity_item_time"
                android:text="time"
                android:layout_toRightOf="@id/main_activity_item_imageview"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/main_activity_item_name"
                android:textSize="12sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_activity_item_relativelayout2"
            android:layout_below="@id/main_activity_item_relativelayout1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_activity_item_ques"
                android:text="question"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_activity_item_optionM1"
                android:layout_below="@id/main_activity_item_ques"
                android:text="A. "
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_activity_item_option1"
                android:layout_toRightOf="@id/main_activity_item_optionM1"
                android:layout_below="@id/main_activity_item_ques"
                android:text=""
                android:textSize="20sp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="20dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_activity_item_optionM2"
                android:layout_below="@id/main_activity_item_option1"
                android:text="B. "
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_activity_item_option2"
                android:layout_toRightOf="@id/main_activity_item_optionM2"
                android:layout_below="@id/main_activity_item_option1"
                android:text=""
                android:textSize="20sp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="20dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_activity_item_optionM3"
                android:layout_below="@id/main_activity_item_option2"
                android:text="C. "
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_activity_item_option3"
                android:layout_toRightOf="@id/main_activity_item_optionM3"
                android:layout_below="@id/main_activity_item_option2"
                android:text=""
                android:textSize="20sp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="20dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_activity_item_optionM4"
                android:layout_below="@id/main_activity_item_option3"
                android:text="D. "
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_activity_item_option4"
                android:layout_below="@id/main_activity_item_option3"
                android:layout_toRightOf="@id/main_activity_item_optionM4"
                android:text=""
                android:textSize="20sp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="20dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/main_activity_item_option4"
                android:id="@+id/main_activity_item_view"
                android:background="#BFBDBD"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_activity_item_showansbutton"
                android:layout_below="@id/main_activity_item_view"
                android:paddingHorizontal="10dp"
                android:text="Share"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/ic_baseline_share_24"
                android:background="@null"
                android:drawablePadding="10dp"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="#838282"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_activity_item_ans"
                android:text="ans"
                android:textColor="#27691A"
                android:layout_below="@id/main_activity_item_showansbutton"
                android:textSize="17sp"
                android:visibility="gone"/>

        </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>